<% form_for_action :action => 'edit', :id => controller.model_object.id || 'new' do |form| %>
  <%= render :partial => 'edit_form', :locals => {:model => controller.model_object, :form => form} %>
  <div class="field no_label">
    <%= submit_tag("Save changes")%>
    <%= cancel_action 'Cancel', :action => 'edit', :id => controller.model_object.id || 'new' %>
  </div>
<% end %>
